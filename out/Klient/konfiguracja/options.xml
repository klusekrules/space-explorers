<?xml version="1.0" encoding="utf-8"?>
<Space-Explorers>  
  <!-- Ustawienia regionalne jakie są używane w aplikacji.
  WARN: O tych ustawień zależy sposób interpretacji liczb. Należy zwrócic uwagę czy separator dzięsiętny w plikach danych jest zgodny z separaterem używanym w wybranych utawieniach regionalnych.
  -->
  <opcja nazwa="locale" wartosc="Polish"/>
    
  <!-- Adres folderu względem domyślnego katalogu, w którym znajduja się pliki dll z pluginami. W podfolderze tej ścieżki są wyszukiwane i wczytywane zmiany. -->
  <opcja nazwa="plugins" wartosc="dodatki\\"/>

  <!-- Główny katalog gry -->
  <opcja nazwa="glownyFolderGry" wartosc="Klient"/>
  
  <!-- Nazwa pliku zawierającego powiązania nazw symbolicznych oraz adresów plików. Adres względem "glownyFolderGry". -->
  <opcja nazwa="powiazaniaZasobow" wartosc="konfiguracja\\powiazania.xml"/>
  <!-- Opis Konfiguracji loggera. -->
  
  <!-- numerFormatuDaty - dopuszczalne wartosci = [0, 1, 2] -->  
  <opcja nazwa="numerFormatuDaty" wartosc="1"/>
  
  <!-- formatDatyWNazwiePliku - format identyczny jak w funkcji strftime. Maksymalna dopuszczalna ilość znaków po przetworzeniu formatu wynosi 20.-->
  <opcja nazwa="formatDatyWNazwiePliku" wartosc="%Y-%m-%d"/>
  
  <!--prefixPlikuLogow - przedrostek w nazwie plik dodany przed datą wyświetloną podanym wyżej formacie. Adres względem "glownyFolderGry".-->
  <opcja nazwa="prefixPlikuLogow" wartosc="logi\\space-explorers-"/>
  
  <!-- WARN: Plik tworzony jest raz na początku działania aplikacji. W przypadku zmiany daty nie jest tworzony nowy, dopuki aplikacja nie zostanie uruchomiona ponownie. -->
  <!--
  Atrybuty opcjonalne:
  zablokowaneLogi - Lista numerów poziomów logów, które zostaną zablokowane. 
  Jakie typy logów zostaną zablokowane przy wpisaniu numeru:
  0 - wszystkie, 1 - tylko debug, 2 - tylko info, 3 - tylko warnig, 4 - tylko error. 
  -->
  <opcja nazwa="zablokowaneLogi" wartosc="1"/>
  <!--
  odblokowaneLogi - Lista numerów poziomów logów, które zostaną odblokowane. 
  Jakie typy logów zostaną odblokowane przy wpisaniu numeru:
  0 - wszystkie, 1 - tylko debug, 2 - tylko info, 3 - tylko warnig, 4 - tylko error. 
  -->  
  <!-- <opcja nazwa="odblokowaneLogi" wartosc="1"/> -->  
  <!--
  WARN: Ważniejsze są blokady. Oznacza to że jeżeli ten sam poziom zostanie wymieniony w obu listach, wtedy obowiązuje blokada danego typu logów.
  INFO: Domyślnie wszystkie typy logów są odblokowane oprócz typu debug.
  -->  
    
  <!-- Względny adres do pliku z danymi ładowanymi do aplikacji. -->
  <!--opcja nazwa="plikDanych" wartosc="Klient\\danetestowe.xml"/-->
  
 
  <opcja nazwa="plikGry" wartosc="lokalny\\gra.xml"/>
  <opcja nazwa="folderPlikowUzytkownikow" wartosc="lokalny\\"/>
  <opcja nazwa="folderPlikowOpisuUkladow" wartosc="lokalny\\uklad\\"/>
  <opcja nazwa="plikAutoryzacji" wartosc="hash.xml"/>
  
  <opcja nazwa="portSerwera" wartosc="15015"/>
  <opcja nazwa="adresSerwera" wartosc="127.0.0.1"/>
  
  <!-- Konfiguracja okna konsoli -->
  <opcja nazwa="plikWdgKonsoli" wartosc="ekrany\\konsola.wdg"/>
  <opcja nazwa="plikCzcionkiKonsoli" wartosc="zasoby\\consola.ttf"/>
  <opcja nazwa="nazwaKontrolkiEditboxKonsoli" wartosc="polecenia"/>
  <opcja nazwa="nazwaKontrolkiChatboxKonsoli" wartosc="logi"/>
  <opcja nazwa="tytulOknaKonsoli" wartosc="Konsola"/>
  <opcja nazwa="szerokoscOknaKonsoli" wartosc="650"/>
  <opcja nazwa="wysokoscOknaKonsoli" wartosc="400"/>
  <opcja nazwa="pozycjaXOknaKonsoli" wartosc="10"/>
  <opcja nazwa="pozycjaYOknaKonsoli" wartosc="450"/>
  
</Space-Explorers>